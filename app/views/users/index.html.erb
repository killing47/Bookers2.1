<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "user_imgae" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
    <%= link_to  "",  edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}"  %>
    </div>

    <%= render 'users/list', new_book: @new_book %>

  </div>
  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |f| %>
        <tr>
           <td><%= attachment_image_tag f, :image, :fill, 60, 60, fallback: "no_image.jpg" %> </td>
           <td><%= f.name %></td>
           <td><%= link_to "Show", user_path(f.id), class: "user_#{f.id}" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @users, class: "pagenate" %>
