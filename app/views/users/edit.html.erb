

<h2>User info</h2>
<div id="error_explanation" >
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
<% end %>
</div>
<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :Name, class: "name" %>
    <%= f.text_field :name, class: "name" %>
  </div>
  <div class="field">
     <%= f.label :image, class: "user_image" %>
     <%= f.attachment_field :image , class: "user_image"%>
  </div>
  <div class="field">
    <%= f.label :Introduction, class: "introduction"%>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>
  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
<% end %>
