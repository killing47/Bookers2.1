

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>

        <div id = "error_explanation">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
            <% @book.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
        <% end %>
        </div>

         <%= form_for(@book) do |f| %>

            <div class="field row">
                <%= f.label :Title, class: "book_title col-xs-12" %>
                <%= f.text_field :title, class: "book_title col-xs-12" %>
            </div>
            <div class="field row">
                <%= f.label :Opinion, class: "book_body col-xs-12" %>
                <%= f.text_area :body, class: "book_body col-xs-12" %>
            </div>
             <div class="actions row">
                <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
             </div>
        <% end %>
        <%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
        |
        <%= link_to "Back", books_path, class: "books" %>
    </div>
    <div class="col-md-3"></div>
</div>
